<domain xmlns:qemu="http://libvirt.org/schemas/domain/qemu/1.0" type="kvm">
  <name>windows11</name>
  <metadata>
    <libosinfo:libosinfo xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
      <libosinfo:os id="http://microsoft.com/win/11"/>
    </libosinfo:libosinfo>
  </metadata>
  <memory>4194304</memory>
  <currentMemory>4194304</currentMemory>
  <memoryBacking>
    <hugepages>
      <page size="2048" unit="KiB"/>
    </hugepages>
    <nosharepages/>
    <source type="memfd"/>
    <access mode="shared"/>
    <allocation mode="immediate"/>
  </memoryBacking>
  <vcpu>2</vcpu>
  <os>
    <type arch="x86_64" machine="q35">hvm</type>
    <loader readonly="yes" type="pflash">/home/idv/sriov/install_dir/OVMF_CODE.fd</loader>
    <nvram template="/home/idv/sriov/install_dir/OVMF_VARS_windows.fd"/>
    <boot dev="hd"/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <vmport state="off"/>
  </features>
  <cpu mode="host-passthrough"/>
  <clock offset="localtime">
    <timer name="rtc" tickpolicy="catchup"/>
    <timer name="pit" tickpolicy="delay"/>
    <timer name="hpet" present="no"/>
  </clock>
  <pm>
    <suspend-to-mem enabled="yes"/>
    <suspend-to-disk enabled="yes"/>
  </pm>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2" cache="none" discard="unmap"/>
      <source file="/home/idv/sriov/install_dir/win.qcow2"/>
      <target dev="vda" bus="sata"/>
    </disk>
    <controller type="usb" model="qemu-xhci" ports="15"/>
    <controller type="pci" model="pcie-root"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <controller type="pci" model="pcie-root-port"/>
    <!--
    <interface type="network">
      <source network="default"/>
      <mac address="52:54:00:ab:cd:22"/>
      <model type="e1000e"/>
    </interface>
    -->
    <interface type="user">
      <link state="up"/>
      <mac address="52:54:00:ab:cd:23"/>
      <model type="e1000e"/>
    </interface>   
    <!--<console type="pty"/>
    <channel type="unix">
      <source mode="bind"/>
      <target type="virtio" name="org.qemu.guest_agent.0"/>
    </channel>
    -->
    <input type="tablet" bus="usb"/>
    <sound model="ich9">
      <codec type="duplex"/>
      <audio id="1"/>
      <alias name="sound0"/>
    </sound>
    <!--
    <audio id="1" type="pulseaudio" timerPeriod="5000" serverName="unix:/tmp/pulseaudio-socket">
      <input mixingEngine="yes" fixedSettings="no"/>
      <output mixingEngine="yes" fixedSettings="no"/>
    </audio>
    -->
    <hostdev mode="subsystem" type="pci" managed="yes">
      <source>
        <address domain="0" bus="0" slot="2" function="2"/>
      </source>
      <address type="pci" domain="0" bus="0" slot="2" function="0"/>
    </hostdev>
    <video>
      <!-- blob='on' requires libvirt 9.2 and beyond, so add custom qemu cmdline below for now-->
      <model type="virtio" heads="1" blob="on"/>
      <driver name="qemu"/>
    </video>
    <hostdev mode='subsystem' type='usb'>
      <source>
        <vendor id='0x047f'/>
        <product id='0xc056'/>
      </source>
    </hostdev>
  </devices>
  <qemu:commandline>
    <!-- enable blob for virtio-vga-->
    <qemu:arg value="-display"/>
    <qemu:arg value="gtk,gl=on"/>
    <!--<qemu:arg value="-device"/>
    <qemu:arg value="vfio-pci,host=0000:00:02.2"/>
    -->
    <!--
    <qemu:arg value="-device"/>
    <qemu:arg value="virtio-vga.max_outputs=2,blob=true"/>
    -->
    <qemu:env name="DISPLAY" value=":1"/>
  </qemu:commandline>
  <qemu:override>
    <qemu:device alias="video0">
      <qemu:frontend>
        <qemu:property name="blob" type="bool" value="true"/>
        <qemu:property name="render_sync" type="bool" value="false"/>
      </qemu:frontend>
    </qemu:device>
  </qemu:override>
</domain>
